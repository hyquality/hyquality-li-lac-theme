                             src="{{ preview_image | img_url: 'master' }}"
                             alt="{{ preview_image.alt | escape }}">
                    </noscript>
                {% endif %}
          {% endif %}
          
          {% if show_file_src3 != blank %}
                {% assign stripped_content = content | strip_html | strip_newlines | strip %}
