                    <noscript>
                        <img class="grid-product__image lazyloaded"
                             src="{{ preview_image | img_url: 'master' }}"
                             alt="{{ preview_image.alt | escape }}">
                    </noscript>
                {% endif %}
          {% endif %}

            {% if show_file_src != blank and show_file_src2 != blank and show_file_src3 != blank %}
                {{ content }}
            {% endif %}

        </div>
    </div>
</div>
